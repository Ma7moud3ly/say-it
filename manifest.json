{
	"name": "Say It",
	"manifest_version": 2,
	"version": "1.0.0",
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_title": "Say It",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tts"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"exclude_matches": [
				"*://www.youtube.com/*",
				"*://translate.google.com.eg/*"
			]
		}
	]
}